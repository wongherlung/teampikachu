<% content_for :title do %>
  Scores
<% end %>

<% if @latest %>
<div class="row">
  <div class="col-xs-12 col-md-10 col-md-offset-1">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Latest Score</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <table class="table table-bordered table-hover">
          <thead>
          <tr>
            <th>Name</th>
            <th># of Products Recycled</th>
            <th>$</th>
          </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @latest.name %></td>
              <td><%= @latest.recycled_product %></td>
              <td>$<%= number_with_precision(@latest.recycled_product * 0.2, :precision => 2) %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
<% end %>

<div class="row">
  <div class="col-xs-12 col-md-10 col-md-offset-1">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Leaderboard</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <table class="table table-bordered table-hover">
          <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th># of Products Recycled</th>
            <th>$</th>
          </tr>
          </thead>
          <tbody>
          <% if not @users.empty? %>
            <% @users.each_with_index  do |user, index| %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= user.name %></td>
                <td><%= user.recycled_product %></td>
                <td>$<%= number_with_precision(user.recycled_product * 0.2, :precision => 2) %></td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="4">Nobody recycled :(</td>
            </tr>
          <% end %>
          </tbody>
          <tfoot>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th># of Products Recycled</th>
            <th>$</th>
          </tr>
          </tfoot>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
